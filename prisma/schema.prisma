generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wedding{
  id String @id @default(uuid())
  bride String
  brideMother String
  brideFather String
  groom String
  groomMother String
  groomFather String
  day Int
  month String
  year Int
  address String
  mapsUrl String
}

model Guest {
  id String @id @default(uuid())
  name String
  phone String
  email String
  isConfirmed Boolean
}

model Gift {
  id String @id @default(uuid())
  name String
  priceICents Int
  imgUrl String
}

